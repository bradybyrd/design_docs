<h3>Site <%= @site.name %></h3>
<div class="panel-group" id="accordion">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <span class='glyphicon glyphicon-list' style="margin:10px; color:#36648b;"></span>
        <a data-toggle="collapse" data-parent="#accordion" href="#site_basics_panel">
          Site Basics <small style="float:right;">(show/hide)</small>
        </a> 
      </h4>
    </div>
    <div id="site_basics_panel" class="panel-collapse collapse in">
      <div class="panel-body">
        <%= render :partial => 'form' %>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <span class='glyphicon glyphicon-globe' style="margin:10px; color:#36648b;"></span>
        <a data-toggle="collapse" data-parent="#accordion" href="#climate_panel">
          Site Climate and Conditions <small style="float:right;">(show/hide)</small>
        </a> 
      </h4>
    </div>
    <div id="climate_panel" class="panel-collapse collapse">
      <div class="panel-body">
        Climate and conditions properties here
      </div>
    </div>
  </div>
  <% @site.basins.unarchived.ordered.each_with_index do |basin, idx| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <span class='glyphicon glyphicon-list-alt' style="margin:10px; color:#36648b;"></span>
          <a data-toggle="collapse" data-parent="#accordion" href="#basin_info_panel<%=idx %>">
            <%= basin.name %> - Basin Geometry <small style="float:right;">(show/hide)</small>
          </a> 
        </h4>
      </div>
      <div id="basin_info_panel<%=idx %>" class="panel-collapse collapse">
        <div class="panel-body">
          <%= render :partial => 'basins/form', locals: {basin: basin} %>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <span class='glyphicon glyphicon-screenshot' style="margin:10px; color:#36648b;"></span>
          <a data-toggle="collapse" data-parent="#accordion" href="#basin_design_panel<%=idx %>">
            <%= basin.name %> - Basin Design <small style="float:right;">(show/hide)</small>
          </a> 
        </h4>
      </div>
      <div id="basin_design_panel<%=idx %>" class="panel-collapse collapse">
        <div class="panel-body">
          <%= render :partial => 'basins/design_form', locals: {basin: basin} %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <span class='glyphicon glyphicon-tint' style="margin:10px; color:#36648b;"></span>
        <a data-toggle="collapse" data-parent="#accordion" href="#influent_panel">
          Site Influent <small style="float:right;">(show/hide)</small>
        </a> 
      </h4>
    </div>
    <div id="influent_panel" class="panel-collapse collapse">
      <div class="panel-body">
        Influent properties here
      </div>
    </div>
  </div>

</div> <!-- Accordion -->
