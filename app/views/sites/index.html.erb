<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <h3>Sites</h3>
    <div class="column">
      <table class="table">
        <thead>
          <tr>
			      <th>Customer</th>
			      <th>Address1</th>
			      <th>Address2</th>
			      <th>City</th>
			      <th>State</th>
			      <th>Zip</th>
			      <th>Phone</th>
			      <th>Gps</th>
			      <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
			    <% @sites.each do |site| %>
			      <tr>
			        <td><%= site.customer_id %></td>
			        <td><%= site.address1 %></td>
			        <td><%= site.address2 %></td>
			        <td><%= site.city %></td>
			        <td><%= site.state %></td>
			        <td><%= site.zip %></td>
			        <td><%= site.phone %></td>
			        <td><%= site.gps %></td>
			        <td><%= link_to 'Show', site %></td>
			        <td><%= link_to 'Edit', edit_site_path(site) %></td>
			        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			      </tr>
			    <% end %>
        </tbody>
      </table>
			<br>

			<%= link_to 'New Site', new_site_path %>
    </div>
  </div>
</div>
