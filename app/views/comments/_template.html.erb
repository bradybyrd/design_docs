<% new_comment = Comment.build_from(commentable, current_user.id, "") %>
<div class="comments-header">  
  <h5>
    Comments (<%= commentable.comment_threads.count %>)
  </h5>
</div>

<div class="comments-container">  
  <%= render partial: "comments/reply", locals: {comments: commentable.root_comments, new_comment: new_comment} %>
</div>

<%= render partial: "comments/form", locals: {new_comment: new_comment} %>
