<div class="row">
  <h3>Users</h3>
  <div class="column">
    <table class="table">
      <thead>
        <tr>
          <th>Login/email</th>
          <th>First</th>
          <th>Last</th>
          <th>Customer</th>
          <th>Role</th>
  
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <%= render user %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to "New User", new_user_path %>
  </div>
</div>
