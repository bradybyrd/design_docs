<%= simple_form_for(@user, html: { class: 'form-horizontal' }) do |f| %>
	<div class='control-group'>
  	<%= f.error_notification %>
		<%= f.input :email, required: true, autofocus: true %>
	</div>
	<div class='control-group' id="password_group">
		<%= f.input :password, hint: false, error_html: { id: 'password_error'}, required: true %>
		<%= f.input :password_confirmation %>
		<span class="help-inline" id="confirm_message" style="color: red;"></span>
	</div>
	<div class='control-group'>
	 	<%= f.input :first_name %>
		<%= f.input :last_name %>
		<%= f.input :customer_id, collection: Customer.unarchived.map{|cust| [cust.name, cust.id] } %>
		<%= f.input :role, collection: User.roles.keys.map {|role| [role.titleize,role]} %>
		<%= f.button :submit %>
	</div>
<% end %>	

	