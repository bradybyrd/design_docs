<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <h3>Properties</h3>
    <div class="column" style="width: 100%;">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Holder</th>
            <th>Created by</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @properties.each do |property| %>
            <tr>
              <td><%= link_to(property.name, edit_property_path(property)) %></td>
              <td><%= property.holder_model %></td>
              <td><%= property.created %></td>
              <td><%= link_to 'Edit', edit_property_path(property) %>|<%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>

      <%= link_to 'New Property', new_property_path %>
    </div>
  </div>
</div>