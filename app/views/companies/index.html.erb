<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <h4>Companies</h4>
    <div class="column">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @companies.each do |company| %>
            <tr>
                <td><%= company.name %></td>
                <td><%= company.description %></td>
                <td><%= link_to 'Edit', edit_company_path(company) %>|<%= link_to 'Delete', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
	  	<br>

		  <%= link_to 'New Company', new_company_path %>
    </div>
  </div>
</div>



